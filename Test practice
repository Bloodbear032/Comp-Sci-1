#include <iostream>
using namespace std;

//function calls
int getInteger();
void doMultiplication(int value_a, int &value_b, int &value_c);

int main() {
	int a, b, c;
	a = getInteger();
	b = getInteger();
	c = getInteger();
	doMultiplication(a, b, c);
	cout << a << ", " << b << ", " << c << "." << endl;
}

int getInteger() {
	int value;
	do {
		cout << "Please enter an integer between 1-10";
		cin >> value;
	} while (value > 10 || value < 1);
	return value;
}

void doMultiplication(int value_a, int &value_b, int &value_c)
{
	value_b = value_a * value_b;
	value_c = value_a * value_c;
}
