#include <iostream>

//function calls
int getInteger (int value);
int doMultiplication (int value_a, int value_b, value_c);

int main(){
int a, b, c;
a = getInteger();
b = getInteger();
c = getInteger();
doMultiplication (a, b, c);
cout << a <<", " << b << ", " << c << "."<< endl;
}

int getInteger (int value){
cout << "Please enter an integer";
cin >> value;
return value;
}

int doMultiplication (int value_a, int &value_b, &value_c){
int multiplication_value_for_b, multiplication_value_for_c
multiplication_value_for_b = value_a * value_b;
multiplication_value_for_c = value_a * value_c;
}
